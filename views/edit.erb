<h1>編集画面</h1>

<div>
  <form action="/memos/<%= @id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <div class="form-items">
      <div class="form-items__item">
        <label for="title">タイトル</label>
        <input type="text" name="title" id="title" value="<%= @memo['title'] %>">
      </div>
      <div class="form-items__item">
        <label for="content">内容</label>
        <textarea name="content" id="content" rows="5" cols="33"><%= @memo['content'] %></textarea>
      </div>
      <div class="form-action">
        <input type="submit" value="更新">
      </div>
    </div>
  </form>
  <div class="return-btn">
    <a href="/memos/<%= @id %>">キャンセル</a>
  </div>
</div>
